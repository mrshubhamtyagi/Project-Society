<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mrshubhamtyagi.projectsociety.Demo.NewMemberRegister">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_reg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_reg"
            android:layout_margin="16dp"
            android:padding="4dp"
            android:text="Register Request"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="16dp"
            android:hint="Enter your Full Name"
            android:inputType="textCapWords"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/et_reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="16dp"
            android:hint="Enter your Email ID"
            android:inputType="textEmailAddress"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/et_reg_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="16dp"
            android:hint="Enter your Mobile No."
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/et_reg_block"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_domain_black_24dp"
                android:drawablePadding="16dp"
                android:hint="Your Block"
                android:maxLength="3"
                android:maxLines="1"/>


            <EditText
                android:id="@+id/et_reg_flatNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="16dp"
                android:hint="Your Flat No"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btn_cancel_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueAlpha"
            android:padding="16dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGrey"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_submit_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/colorBlueAlpha"
            android:onClick="getDetails"
            android:padding="16dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGrey"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>
